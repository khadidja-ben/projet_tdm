        <activity android:name=".ui.splash.SplashScreen" android:theme="@style/Theme.AppCompat.Light.NoActionBar">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity android:name=".ui.splash.OnBoardingScreens" android:theme="@style/Theme.AppCompat.Light.NoActionBar" />
        <activity android:name=".ui.activities.AuthActivity" android:theme="@style/Theme.AppCompat.Light.NoActionBar" ></activity>



